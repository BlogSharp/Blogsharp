<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="BlogSharp.Model"
									 namespace="BlogSharp.Model"
                   default-access="backfield">
	<class name="Comment" optimistic-lock="version" abstract="true">
		<id name="ID"
				type="Int64">
			<generator class="hilo"/>
		</id>
		<version name="Version" />
		<property name="Text"/>
		<many-to-one name="Commenter" class="BlogSharp.Model.User, BlogSharp.Model"/>
		<property name="Email"/>
		<property name="Name"/>
		<property name="Web"/>
		<property name="Date"/>
		<property name="Published"/>
		<property name="Spam"/>

		<subclass name="CommentComment">
			<bag name="Comments" lazy="true" cascade="all" access="field.camelcase">
				<key column="ID"/>
				<one-to-many class="CommentComment"/>
			</bag>
			<many-to-one name="Parent"/>
		</subclass>
		<subclass name="PostComment">
			<bag name="Comments" lazy="true" cascade="all" access="field.camelcase">
				<key column="ID"/>
				<one-to-many class="CommentComment"/>
			</bag>
			<many-to-one name="Parent"/>
		</subclass>
	</class>

</hibernate-mapping>