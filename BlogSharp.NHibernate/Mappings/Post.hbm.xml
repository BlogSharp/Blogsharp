<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									 assembly="BlogSharp.Model"
									 namespace="BlogSharp.Model">
	<class name="Post">
		<id name="ID"
				type="Int64">
			<generator class="hilo"/>
		</id>
		<property name="Title" length="200"/>
		<property name="FriendlyTitle" length="50"/>
		<property name="Email"/>
		<many-to-one name="Blog" class="BlogSharp.Model.Blog, BlogSharp.Model"/>
	</class>
</hibernate-mapping>